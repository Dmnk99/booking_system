{% extends 'base.html.twig' %} {% block stylesheets %}
{{ parent() }}
<link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css"
/>
<style>
    /* Prispôsobenie vzhľadu */
    .datepicker {
        font-size: 1rem;
        border-radius: 8px;
        padding: 10px;
    }

    .datepicker-dropdown {
        border-radius: 8px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    .datepicker table {
        width: 100%;
    }

    .datepicker td,
    .datepicker th {
        padding: 8px;
        text-align: center;
    }

    .datepicker .active {
        background-color: #007bff !important;
        color: white !important;
        border-radius: 6px;
    }
</style>
