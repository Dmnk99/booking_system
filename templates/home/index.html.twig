{% extends 'base.html.twig' %} {% block body %}
<div class="text-center mt-5">
    <h1>Welcome to the Booking System</h1>
    <p class="lead">The easiest way to manage your reservations.</p>
    {% if app.user %}
    <a href="{{ path('app_service_index') }}" class="btn btn-primary btn-lg"
        >View Services</a
    >
    <a href="{{ path('app_booking_index') }}" class="btn btn-secondary btn-lg"
        >View my Bookings</a
    >
    {% else %}
    <a href="{{ path('app_service_index') }}" class="btn btn-primary btn-lg"
        >View Services</a
    >
    <a href="{{ path('app_register') }}" class="btn btn-secondary btn-lg"
        >Get Started</a
    >
    {% endif %}
</div>

